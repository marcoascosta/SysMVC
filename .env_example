# .env file for SysMVC

# Application settings
APP_NAME=SysMVC
APP_KEY=
APP_ENV=local           # options: local, production, staging
APP_DEBUG=true          # options: true, false
APP_URL=http://localhost

# Database configuration
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=sysmvc
DB_USERNAME=root
DB_PASSWORD=



# Session configuration
SESSION_DRIVER=file     # options: file, database, redis, etc.
SESSION_LIFETIME=120    # in minutes

# Mail configuration (example for SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"

# Logging configuration
LOG_CHANNEL=stack       # options: daily, single, syslog, etc.

# JWT Secret for authentication (if you're using JWT)
JWT_SECRET=your_jwt_secret_key

# Other third-party services
PUSHER_APP_ID=your_pusher_app_id
PUSHER_APP_KEY=your_pusher_app_key
PUSHER_APP_SECRET=your_pusher_app_secret

# Redis configuration (if you're using Redis)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Storage paths (example for image uploads)
UPLOADS_DIR=/var/www/sysmvc/public/uploads

# Other sensitive credentials
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_SECRET=your_paypal_secret_key
PAYPAL_MODE=sandbox  # ou "live" para produção

# MercadoPago
MERCADOPAGO_ACCESS_TOKEN=your_access_token
MERCADOPAGO_PUBLIC_KEY=your_public_key

# Pagar.me
PAGARME_API_KEY=your_api_key
PAGARME_ENCRYPTION_KEY=your_encryption_key

# Braintree
BRAINTREE_MERCHANT_ID=your_merchant_id
BRAINTREE_PUBLIC_KEY=your_public_key
BRAINTREE_PRIVATE_KEY=your_private_key

# PagSeguro
PAGSEGURO_EMAIL=your_pagseguro_email
PAGSEGURO_TOKEN=your_pagseguro_token

API_PUBLIC_KEY=
API_SECRET_KEY=



# Optional for development
APP_TIMEZONE=America/Sao_Paulo



# PHP Configuration

# Limite de memória do PHP (aumente se precisar processar muitos dados)
PHP_MEMORY_LIMIT=512M

# Tempo máximo de execução de scripts (evita timeout em processos longos)
PHP_MAX_EXECUTION_TIME=300

# Tempo máximo que um script pode aguardar por entrada (upload, por exemplo)
PHP_MAX_INPUT_TIME=120

# Tamanho máximo de arquivos para upload
PHP_UPLOAD_MAX_FILESIZE=50M

# Tamanho máximo de POST (afeta upload de arquivos grandes)
PHP_POST_MAX_SIZE=50M

# Número máximo de arquivos enviados por requisição
PHP_MAX_FILE_UPLOADS=50

# Exibir erros do PHP (use false em produção)
PHP_DISPLAY_ERRORS=true

# Exibir startup errors do PHP
PHP_DISPLAY_STARTUP_ERRORS=true

# Nível de erro do PHP (E_ALL para capturar tudo, E_ERROR para apenas erros graves)
PHP_ERROR_REPORTING=E_ALL

# Habilita ou desabilita logs de erro do PHP
PHP_LOG_ERRORS=true

# Arquivo de log de erros do PHP
PHP_ERROR_LOG=/var/log/php_errors.log

